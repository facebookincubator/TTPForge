{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "go",
      "request": "launch",
      "name": "Debug Hello World TTP",
      "mode": "debug",
      "program": "${workspaceRoot}",
      "args": [
        "-c",
        "config.yaml",
        "run",
        "ttps/privilege-escalation/credential-theft/hello-world/ttp.yaml"
      ]
    },
    {
      "type": "go",
      "request": "launch",
      "name": "Debug create new bash TTP",
      "mode": "debug",
      "program": "${workspaceRoot}",
      "args": [
        "-c",
        "config.yaml",
        "new",
        "ttp",
        "--path",
        "ttps/lateral-movement/ssh/rogue-ssh-key.yaml",
        "--template",
        "bash",
        "--ttp-type",
        "file",
        "--cleanup",
        "--env",
        "EXAMPLE_ENV_VAR=example_value",
        "--args",
        "arg1,arg2,arg3"
      ]
    },
    {
      "name": "Test Current File",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${workspaceFolder}/${relativeFileDirname}",
      "showLog": true
    },
    {
      "type": "go",
      "request": "launch",
      "name": "Debug Rogue SSH TTP",
      "mode": "debug",
      "program": "${workspaceRoot}",
      "args": [
        "-c",
        "config.yaml",
        "run",
        "ttps/lateral-movement/ssh/rogue-ssh-key.yaml"
      ]
    }
  ],
  "compounds": [
    {
      "name": "Debug TTPs with VSCode",
      "configurations": ["Debug Hello World TTP"],
      "stopAll": true
    }
  ]
}
